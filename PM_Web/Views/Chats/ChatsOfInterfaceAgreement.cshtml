@model IEnumerable<PM.Models.Chat>

@{
    ViewData["Title"] = "Chat";
    var interfaceAgreementId = ViewBag.InterfaceAgreementId;
}

<h1 class="text-center mt-3">
    Chat for Interface Agreement IA_@interfaceAgreementId
</h1>

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <a asp-action="Index" asp-controller="InterfaceAgreements" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-hover table-bordered text-center">
                <thead class="thead-dark">
                    <tr>
                        <th>Time</th>
                        <th>Sender</th>
                        <th>Message</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var chat in Model)
                    {
                        <tr>
                            <td>@chat.Time.ToString("g")</td>
                            <td>@chat.Sender</td>
                            <td>@chat.Message</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col">
            <form asp-action="AddMessageToChatOfInterfaceAgreement" method="post">
                <input type="hidden" name="interfaceAgreementId" value="@interfaceAgreementId" />
                <div class="form-group">
                    <textarea name="message" class="form-control" placeholder="Type your message here..." required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send</button>
            </form>
        </div>
    </div>
</div>
